typedef struct {
	char nombre[N];
	char apellidos[N];
	char correo[N];
	char usuario[N];
	char contraseña[N];
	char recontraseña[N];

}Cuenta;
//aqui metemos todas las funciones
int leer_entero(void);

int main()
{
	int t = 0, d, e, ñ = 164;

	char c, newpac[15], paciente_v[DIM2];//newpac es la cadena para añadir un nuevo paciente a un doctor
	
